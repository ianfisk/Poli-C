{
	"compilerOptions": {
		"target": "es5",
		"module": "CommonJS",
		"lib": ["es5", "ES2015.Promise", "dom"],
		"outDir": "dist",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"strictNullChecks": true
	},
	"exclude": ["node_modules", "dist", "tests"],
	"include": ["./src/**/*.ts"]
}
